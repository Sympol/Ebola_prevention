<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff" >
 <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/signe"
        	android:textSize="17sp"/>   
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


             <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fievre" 
                android:layout_gravity="center"
                android:contentDescription="@string/sym"/>
                    
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fatigue" 
                android:layout_gravity="center"
                android:contentDescription="@string/sym"/>
        </TableRow>
        
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


        <ImageView
	        android:id="@+id/imageView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/nausee" 
	        android:layout_gravity="center"
	        android:contentDescription="@string/sym"/>
            
       <ImageView
	        android:id="@+id/imageView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/maux_de_tete"
	        android:layout_gravity="center"
	        android:contentDescription="@string/sym" />
        </TableRow>
        
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


             <ImageView
		        android:id="@+id/imageView5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/toux" 
		        android:layout_gravity="center"
		        android:contentDescription="@string/sym"/>
            
            <ImageView
		        android:id="@+id/imageView6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/diarhee" 
		        android:layout_gravity="center"
		        android:contentDescription="@string/sym"/>
        </TableRow>
        
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >


              <ImageView
		        android:id="@+id/imageView7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/vomi" 
		        android:layout_gravity="center"
		        android:contentDescription="@string/sym"/>
            
            <ImageView
		        android:id="@+id/imageView8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/hemorragie"
		        android:layout_gravity="center"
		        android:contentDescription="@string/sym" />
        </TableRow>
        
        </LinearLayout>
    </ScrollView>
    </LinearLayout>